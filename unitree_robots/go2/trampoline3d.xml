        <edge equality="false" damping="20"/>
        <elasticity young="1e5" poisson="0" damping="0.0001" thickness="0.2"/>

        <!-- <pin gridrange="0 0 0  0 0 1"/>
        <pin gridrange="9 0 0  9 0 1"/>
        <pin gridrange="0 9 0  0 9 1"/>
        <pin gridrange="9 9 0  9 9 1"/> -->
      </flexcomp>
    </body>
  </worldbody>
</mujoco>